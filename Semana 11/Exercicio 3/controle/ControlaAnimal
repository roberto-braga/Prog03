package controle;

import dominio.Cachorro;
import dominio.Gato;

public class ControlaAnimal {
	public static void main(String[] args) {
		
		Cachorro cachorro = new Cachorro("Amora", 4);
		Gato gato = new Gato("Rudah", 5);
		
		System.out.println("Cachorro:" + cachorro.getNome() + " / Idade:" + cachorro.getIdade());
		cachorro.emitirSom();
		
		System.out.println("Gato:" + gato.getNome() + " / Idade:" + gato.getIdade());
		gato.emitirSom();
	}
}
