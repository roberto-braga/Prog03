import pagamento.CartaoCredito;
import pagamento.BoletoBancario;
import pagamento.Pagamento;


public class ControlaPagamento {
    public static void main(String[] args) {
        Pagamento pagamentoCartao = new CartaoCredito();
        Pagamento pagamentoBoleto = new BoletoBancario();
        
        pagamentoCartao.realizarPagamento(150.75);  
        pagamentoBoleto.realizarPagamento(250.50); 
    }
}
